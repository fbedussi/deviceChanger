{
	"manifest_version": 2,

	"name": "Device changer",
	"description": "Toggle the device on an OFS site",
	"version": "1.0",

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"browser_action": {
		"default_icon": "icons/icon19.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"http://*/*", "https://*/*"
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"commands": {
		"activate-smartphone": {
			"suggested_key": {
				"default": "Ctrl+Shift+W"
			},
			"description": "Activate smartphone"
		}
	}
}